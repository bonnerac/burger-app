<h1>Eat-Da-Burger</h1>

<h3>Let's Eat Some Burgers!</h3>

<ul>
    {{#each burgers}}
    <li>
        <p>ID: {{this.id}}</p>
        <p>Burger: {{this.burger_name}}</p>
    </li>

</ul>

<form action="/" method="POST">
    <textarea type="text" name="burger"></textarea>

    <button type="submit">Devour it!</button>
</form>
{{/each}}